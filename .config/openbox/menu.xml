<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="exit-menu" label="E_xit">
  <item label="Restart">
    <action name="Restart" />
  </item>
  <item label="Logout">
    <action name="Exit" />
  </item>
  <item label="Re_boot">
    <action name="Execute">
      <prompt>Are you sure you want to reboot the system?</prompt>
      <command>sh -c 'systemctl reboot || gksudo reboot'</command>
    </action>
  </item>
  <item label="Power_Off">
    <action name="Execute">
      <prompt>Are you sure you want to power off the system?</prompt>
      <command>sh -c 'systemctl poweroff || gksudo halt -p'</command>
    </action>
  </item>
</menu>

<menu id="inet-menu" label="Internet">
  <item label="Chromium">
    <action name="Execute"><command>chromium</command></action>
  </item>
  <item label="Chromium (_incognito)">
    <action name="Execute"><command>chromium --incognito</command></action>
  </item>
  <item label="Firefox">
    <action name="Execute"><command>firefox</command></action>
  </item>
  <item label="Firefox (_private)">
    <action name="Execute"><command>firefox --private-window</command></action>
  </item>
</menu>

<menu id="root-menu" label="Openbox 3">
  <item label="Run...">
    <action name="Execute"><command>dmenu_run.sh -p 'Run:'</command></action>
  </item>
  <separator />
  <menu id="/Debian" />
  <separator />
  <item label="URxvt">
    <action name="Execute"><command>urxvtc</command></action>
  </item>
  <menu id="inet-menu" />
  <separator />
  <!-- This requires the presence of the 'menu' package to work -->
  <item label="Appearance">
    <action name="Execute"><execute>lxappearance</execute></action>
  </item>
  <item label="Re_configure">
    <action name="Reconfigure" />
  </item>
  <separator />
  <menu id="client-list-menu" />
  <separator />
  <menu id="exit-menu"/>
</menu>

</openbox_menu>
