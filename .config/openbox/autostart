#
# These things are run when an Openbox X Session is started.
#

# Launch composite manager
pgrep -xu "$USER" compton >/dev/null || \
    compton -bcCG -o 0.2 -r 0 -l 5 -t 5

# Launch systray
pgrep -xu "$USER" stalonetray >/dev/null || stalonetray &

# Change screen timeout
# https://wiki.archlinux.org/index.php/Display_Power_Management_Signaling#Modifying_DPMS_and_screensaver_settings_using_xset
xset s 590 590
# Start xautolock daemon if login locally
if [ -z "$XRDP_SESSION" ]; then
	pgrep -xu "$USER" xautolock >/dev/null || \
	    xautolock -locker "i3lock.sh -p 50 -de -I 5" -time 10 &
fi

# Start udiskie for device automonting
pgrep -xu "$USER" udiskie >/dev/null || udiskie &

# Start S.M.A.R.T. notifier
pgrep -xu "$USER" smart-notifier >/dev/null || smart-notifier &

# Start AppArmor notifier
pgrep -xu "$USER" aa-notify >/dev/null || aa-notify -p -s 1 -w 60 &

# Set volume to 50%
amixer -q sset Master 50%

# Start gxkb applet
gxkb &
# Start Blueman applet
blueman-applet &
# Start Update-notifier
update-notifier &
# Start Redshift
redshift-gtk &
# Start ownCloud client
owncloud &
# Start syncthing-gtk
syncthing-gtk --minimized &
# Start clipboard manager
parcellite &
# Start Pidgin
pidgin &
# Start Empathy
empathy --start-hidden &
# Start Tox client
qtox &
# Start Workrave
workrave &

# Set background
hsetroot -solid '#666666'
nitrogen --restore

# Launch panel
tint2 &
