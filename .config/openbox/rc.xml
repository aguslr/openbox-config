    <desktop>6</desktop><focus>yes</focus>
  </application>
  <application class="Wine">
    <desktop>6</desktop><focus>yes</focus>
  </application>
  <application class="Desura">
    <desktop>6</desktop><focus>yes</focus>
  </application>
  <application class="Steam">
    <desktop>6</desktop><focus>yes</focus>
  </application>
  <!-- Send to virt desktop -->
  <application class="qemu-system-*">
    <desktop>7</desktop><focus>yes</focus>
  </application>
  <application class="Virt-manager">
    <desktop>7</desktop><focus>yes</focus>
  </application>
  <application class="VirtualBox">
    <desktop>7</desktop><focus>yes</focus>
  </application>
</applications>

</openbox_config>
